set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set relativenumber number
set hidden " Allow buffer to be hidden without save change
set encoding=utf-8
set cursorline
set splitbelow " default split on the below
set laststatus=2 " Always show status line

set wildmenu
set wildmode=longest:full,full

" Display blank characters
set list
set listchars=tab:\|\ ,space:·,extends:>,precedes:<,leadmultispace:\|·,trail:~

" set cursor
let &t_SI = "\<Esc>[6 q"
let &t_SR = "\<Esc>[4 q"
let &t_EI = "\<Esc>[2 q"
set ttimeoutlen=50

" <Leader> key
let mapleader = " "

" Don't auto insert comment leader on return/hitting 'o'
autocmd BufNewFile,BufWinEnter * setlocal formatoptions=trc
" Don't limit line length
autocmd BufEnter * set tw=0

" vim-plug
call plug#begin('~/.local/share/vim-plug')
Plug 'editorconfig/editorconfig-vim'
Plug 'wakatime/vim-wakatime'
Plug 'justinmk/vim-sneak'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-sleuth'
Plug 'tpope/vim-commentary'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'NLKNguyen/papercolor-theme'
Plug 'zivyangll/git-blame.vim'
Plug 'vifm/vifm.vim'
Plug 'junegunn/fzf'
Plug 'junegunn/fzf.vim'
" Plug 'cohama/lexima.vim'
Plug 'yegappan/lsp'
Plug 'girishji/vimcomplete'
" Plug 'jiangmiao/auto-pairs'

" highlight
Plug 'kylelaker/riscv.vim'
Plug 'pangloss/vim-javascript'
Plug 'leafgarland/typescript-vim'
Plug 'maxmellon/vim-jsx-pretty'

" disable now
" Plug 'liuchengxu/vim-which-key'
" Plug 'neoclide/coc.nvim', { 'branch': 'release' }
call plug#end()

