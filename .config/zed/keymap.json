// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      // "cmd-`": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "f1": "command_palette::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-`": ["terminal::SendText", "\u001b`"],
      "cmd-b": ["terminal::SendText", "\u001bb"],
      "cmd-f": ["terminal::SendText", "\u001bf"]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      "cmd-k cmd-t": "editor::RestartLanguageServer"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-l": "editor::ShowCompletions",
      "ctrl-b (": ["workspace::SendKeystrokes", "( ) left"],
      "ctrl-b {": ["workspace::SendKeystrokes", "{ } left"],
      "ctrl-b }": ["workspace::SendKeystrokes", "{ enter enter } up tab"],
      "ctrl-b ]": ["workspace::SendKeystrokes", "[ enter enter ] up tab"]
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "g r": "editor::FindAllReferences"
    }
  }
]
